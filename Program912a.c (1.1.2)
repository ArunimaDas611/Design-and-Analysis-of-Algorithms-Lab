void read1(int arr[], int n) {
  printf("Enter %d elements : ", n);
  for (int i = 0; i < n; i++) {
    scanf("%d", & arr[i]);
  }
}
void bubbleSort(int arr[], int n) {
  int temp;
  for (int i = 0; i < n; i++) {
    for (int j = 0; j < (n - i - 1); j++) {
      if (arr[j] > arr[j + 1]) {
        temp = arr[j];
        arr[j] = arr[j + 1];
        arr[j + 1] = temp;
      }
    }
  }
}
void display(int arr[], int n) {
  for (int i = 0; i < n; i++) {
    printf("%d ", arr[i]);
  }
  printf("\n");
}
int binarySearch(int arr[], int low, int high, int key) {
    int mid = (low + high) / 2;
    while (low < high) {
      if (arr[mid] == key) {
        return mid;
      } else if (key < arr[mid]) {
        return binarySearch(arr, low,
          mid - 1, key);
      } else {
        return binarySearch(arr, mid + 1,
          high, key);
      }
    }
    return -1;
}
