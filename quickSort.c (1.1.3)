#include <stdio.h>

void swap(int * a, int * b) {
  int temp;
  temp = * a;
  * a = * b;
  * b = temp;
}
int partition(int arr[], int low, int high) {
  int pivot = arr[high], i = low - 1;
  for (int j = low; j < high; j++) {
    if (arr[j] < pivot) {
      i++;
      swap( & arr[i], & arr[j]);
    }
  }
  swap( & arr[i + 1], & arr[high]);
  return i + 1;
}
void quickSort(int arr[], int low, int high) {
  if (low < high) {
    int index = partition(arr, low,
      high);
    printf("Pass: ");
    for (int i = low; i <= high; i++) {
      printf("%d ", arr[i]);
    }
    printf("\n");
    quickSort(arr, low, index - 1);
    quickSort(arr, index + 1, high);
  }
}
void main() {
  int a[20], n, i;
  printf("number of elements: ");
  scanf("%d", & n);
  printf("elements: ");
  for (i = 0; i < n; i++) {
    scanf("%d", & a[i]);
  }
  printf("Original array: ");
  for (i = 0; i < n; i++) {
    printf("%d ", a[i]);
  }
  printf("\n");
  quickSort(a, 0, n - 1);
  printf("Sorted array: ");
  for (i = 0; i < n; i++) {
    printf("%d ", a[i]);
  }
  printf("\n");
}
