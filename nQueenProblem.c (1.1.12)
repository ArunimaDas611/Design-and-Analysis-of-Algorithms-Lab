#include <stdio.h>
int board[10][10];
int is_attack(int i, int j, int n)
{
	int row, col;
	for(row = 0; row < i; row++)
	{
		if(board[row][j])
		{
			return 1;
		}
	}
	row = i - 1;
	col = j - 1;
	while(row >= 0 && col >= 0)
	{
		if(board[row][col])
		{
			return 1;
		}
		row -= 1;
		col -= 1;
	}
	row = i-1;
	col = j+1;
	while(row >= 0 && col < n)
	{
		if(board[row][col])
		{
			return 1;
		}
		row -= 1;
		col += 1;
	}
	return 0;
}

int nQueen(int n)
{
	int i, j, empty;
	for(i = 0; i < n; i++)
	{
		empty = 1;
		for(j = 0; j < n; j++)
		{
			if(board[i][j])
			{
				empty = 0;
				break;
			}
		}
		if(empty)
		{
			break;
		}
	}
	if(i == n)
	{
		return 1;
	}
	int count = 0;
	for(j = 0; j < n; j++)
	{
		if(is_attack(i, j, n) == 0)
		{
			board[i][j] = 1;
			count += nQueen(n);
			board[i][j] = 0;
		}
	}
	return count;
}

void main()
{
	int n;
	scanf("%d", &n);
	printf("%d", nQueen(n));
}
